@model MVCUniversity.Models.Enrollment
<h1>Edit Enrollment</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        @{
            var dataCourse = ViewBag.Course;
            var dataStudent = ViewBag.Student;
        }
        <dl class="row">
            <dt class="col-sm-5">
                Student Name:
            </dt>
            <dd class="col-sm-10">
                @dataStudent.FullName
            </dd>
            <dt class="col-sm-5">
                Student Id:
            </dt>
            <dd class="col-sm-10">
                @dataStudent.StudentId
            </dd>
            <dt class="col-sm-5">
                Course Name:
            </dt>
            <dd class="col-sm-10">
                @dataCourse.Title
            </dd>
            <dt class="col-sm-5">
                Semester:
            </dt>
            <dd class="col-sm-10">
                @Model.Semester
            </dd>
            <dt class="col-sm-5">
                Year:
            </dt>
            <dd class="col-sm-10">
                @Model.Year
            </dd>
        </dl>
        <p></p>
        <form asp-action="EditEnrollmentByStudent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="hidden" asp-for="StudentId" class="form-control" asp-items="ViewBag.StudentId" />
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="CourseId" class="form-control" asp-items="ViewBag.CourseId" />
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Semester" class="form-control" />
                <span asp-validation-for="Semester" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                <input asp-for="Grade" class="form-control" disabled/>
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeminarUrl" class="control-label"></label>
                <input asp-for="SeminarUrl" class="form-control" />
                <span asp-validation-for="SeminarUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectUrl" class="control-label"></label>
                <input asp-for="ProjectUrl" class="form-control" />
                <span asp-validation-for="ProjectUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExamPoints" class="control-label"></label>
                <input asp-for="ExamPoints" class="form-control" disabled/>
                <span asp-validation-for="ExamPoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeminarPoints" class="control-label"></label>
                <input asp-for="SeminarPoints" class="form-control" disabled/>
                <span asp-validation-for="SeminarPoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectPoints" class="control-label"></label>
                <input asp-for="ProjectPoints" class="form-control" disabled/>
                <span asp-validation-for="ProjectPoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdditionalPoints" class="control-label"></label>
                <input asp-for="AdditionalPoints" class="form-control" disabled/>
                <span asp-validation-for="AdditionalPoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FinishDate" class="control-label"></label>
                <input asp-for="FinishDate" class="form-control" disabled/>
                <span asp-validation-for="FinishDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}